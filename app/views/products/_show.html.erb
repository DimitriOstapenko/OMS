<%
   provide(:title, 'Product details')
%>

<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <b class="modal-title" id="myModalLabel">Product <%= @product.ref_code %> - Details</b>
</div>
<div class="modal-body">
<% if current_user %>
  <%= render "#{current_user.role}_show_prod" %>
<% else %>
  You have to be registered user to see product details 
<% end %>
</div>

<div class="modal-footer">
</div>
