<table class="table table-sm table-responsive table-condensed table-bordered">
    <caption> Price Matrix </caption>
    <thead>
      <tr>
      <th class="table-condensed">EU1</th>
      <th class="table-condensed">EU2</th>
      <th class="table-condensed">EU3</th>
      <th class="table-condensed">EU4</th>
      <th class="table-condensed">EU5</th>
      <th class="table-condensed">EU6</th>
      <th class="table-condensed">USD1</th>
      <th class="table-condensed">USD2</th>
      </tr>
    </thead>
    <tbody>
      <tr>
      <td nowrap> <%= to_currency @product.price_eu %> </td>
      <td nowrap> <%= to_currency @product.price_eu2 %> </td>
      <td nowrap> <%= to_currency @product.price_eu3 %> </td>
      <td nowrap> <%= to_currency @product.price_eu4 %> </td>
      <td nowrap> <%= to_currency @product.price_eu5 %> </td>
      <td nowrap> <%= to_currency @product.price_eu6 %> </td>
      <td nowrap> <%= to_currency @product.price_usd, locale: :us %> </td>
      <td nowrap> <%= to_currency @product.price_usd2, locale: :us %> </td>
      </tr>
    </tbody>
  </table>
