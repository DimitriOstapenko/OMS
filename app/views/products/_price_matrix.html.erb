<table class="table table-responsive table-condensed table-bordered">
    <caption> Price Matrix </caption>
    <thead>
      <tr>
      <th class="text-center">EU1</th>
      <th class="text-center">EU2</th>
      <th class="text-center">EU3</th>
      <th class="text-center">EU4</th>
      <th class="text-center">EU5</th>
      <th class="text-center">EU6</th>
      <th class="text-center">USD1</th>
      <th class="text-center">USD2</th>
      <th class="text-center">CNY</th>
      </tr>
    </thead>
    <tbody>
      <tr>
<small>
      <td nowrap> <%= to_currency @product.price_eu %> </td>
      <td nowrap> <%= to_currency @product.price_eu2 %> </td>
      <td nowrap> <%= to_currency @product.price_eu3 %> </td>
      <td nowrap> <%= to_currency @product.price_eu4 %> </td>
      <td nowrap> <%= to_currency @product.price_eu5 %> </td>
      <td nowrap> <%= to_currency @product.price_eu6 %> </td>
      <td nowrap> <%= to_currency @product.price_usd, locale: :us %> </td>
      <td nowrap> <%= to_currency @product.price_usd2, locale: :us %> </td>
      <td nowrap> <%= to_currency @product.price_cny, locale: :cn %> </td>
</small>
      </tr>
    </tbody>
  </table>
