  
<%= simple_form_for @product do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <% readonly = (action_name == 'new')? false: true %>

  <div class="row" %>
  <div class="col-md-2">
  <%= f.input :ref_code, hint: "Unique product code", readonly: readonly %>
  </div>
  <div class="col-md-2">
  <%= f.input :brand, collection: BRANDS, include_blank: false %> 
  </div>
  <div class="col-md-2">
  <%= f.input :category, collection: CATEGORIES, include_blank: false %>
  </div>
  <div class="col-md-2">
  <%= f.input :colour, collection: COLOURS  %>
  </div>
  <div class="col-md-2">
  <%= f.input :ctns, label: 'Pcs x Cartons' %>
  </div>
  <div class="col-md-2">
  <%= f.input :weight, label: 'Weight (G)' %>
  </div>
  </div>

  <div class="row" %>
  <div class="col-md-10">
  <%= f.input :description %>
  </div>
  <div class="col-md-2">
  <%= f.input :quantity %>
  </div>
  </div>

  <div class="row" %>
  <div class="col-md-4">
  <%= f.input :scale  %>
  </div>
  <div class="col-md-4">
  <%= f.input :added_date, as: :date, html5: true  %>
  </div>
  <div class="col-md-4">
  <%= f.input :release_date, as: :date,  html5: true  %>
  </div>
  </div>

  <div class="row" %>
  <div class="col-md-2">
  <%= f.input :price_eu %>
  </div>
  <div class="col-md-2">
  <%= f.input :price_eu2 %>
  </div>
  <div class="col-md-2">
  <%= f.input :price_eu3 %>
  </div>
  <div class="col-md-2">
  <%= f.input :price_eu4 %>
  </div>
  <div class="col-md-2">
  <%= f.input :price_eu5 %>
  </div>
  <div class="col-md-2">
  <%= f.input :price_eu6 %>
  </div>
  </div>

  <div class="row" %>
  <div class="col-md-2">
  <%= f.input :price_usd %>
  </div>
  <div class="col-md-2">
  <%= f.input :price_usd2 %>
  </div>
  <div class="col-md-3">
  <%= f.input :manager, collection: get_managers, include_blank: 'unknown'  %>
  </div>
  <div class="col-md-3">
  <%= f.input :supplier, collection: get_suppliers,  include_blank: 'unknown' %>
  </div>
  <div class="col-md-2">
  <%= f.input :progress, label: '% Complete' %>
  </div>
  </div>

  <%= f.input :notes, as: :text %>
  <% unless action_name == 'show' %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <% end %>

<% end %>


