  <tr align='center'>
	<td align='left'><%= link_to product.name, product %> </td>
	<td><%= product.prtype %></td> 
	<td><%= product.category %></td> 
	<td><%= product.scale_str %></td> 
	<td><%= product.ctns %></td> 
        <td><%= product.release_date %></td>
        <td><%= product.price_eu %></td>
        <td><%= product.price_usd %></td>
