<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <div class="spacer-30"></div>
  <div class="col-md-4 col-sm-4 col-md-offset-4 col-sm-offset-4">
  <h3 class='display-1'>Change your password</h3>
  <div class="well">
  <%= f.hidden_field :reset_password_token %>
  <%= f.input :password, autofocus: true, autocomplete: "new-password", label: "New Password", hint:"<em>#{@minimum_password_length} characters minimum</em>".html_safe %>
  <%= f.input :password_confirmation, autocomplete: "new-password", label: "Confirm new password"  %>

    <%= f.button :submit, "Change my password", class: "btn btn-primary" %>

<%= render "devise/shared/links" %>
  </div>
  </div>
<% end %>
