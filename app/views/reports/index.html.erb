<% provide(:title, 'Reports') %>
<%= render 'shared/modal' %>
  
<table class="tbl table-hover">
   <thead>
      <tr>
          <th class="text-center tbl_sm">Id</th>
          <th>Name</th>
          <th>Type</th>
          <th>Client</th>
          <th>Time Frame</th>
          <th class="tbl_lmd">Date Range</th>
          <th>Detail</th>
          <th>Created on</th> 
          <th class="tbl_sm"></th>
          <% if current_user.admin? %>
            <th class="tbl_sm"></th>
          <% end %>
      </tr>
  </thead>
  <tbody>

  <%= render @reports %>

  </tbody>
</table>

<% if current_user.admin? || current_user.staff? %>
<div class="bottom_buttons">
<%= button_to "Create New Report", new_report_path, class: "btn btn-primary col-md-2 ", method: 'get'  %>
</div>
<% end %>

<div class="bottom_nav">
<%= will_paginate @reports, class: "btn" %>
</div>
