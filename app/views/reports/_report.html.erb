<tr>
  <td class="text-center">
  <% if report.exists? %>
     <%= link_to report.id, report, remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %>
  <% else %>
     <%= report.id %>
  <% end %>
  </td>

  <td><%= report.name %></td>
  <td><%= report.status_str %></td>
  <td><%= report.client_code %></td>
  <td><%= report.timeframe_str %></td>
  <td><%= report.daterange %></td>
  <td><%= report.detail_str %></td>
  <td><%= report.created_at %></td>
  <% if report.exists? %>
        <td><%= link_to '<i class="glyphicon glyphicon-download"></i>'.html_safe, download_report_path(report)  %></td>
  <% else %> <!-- regenerate report -->
        <td><%= link_to '<i class="glyphicon glyphicon-question-sign"></i>'.html_safe, download_report_path(report)  %></td>
  <% end %>

  <% if current_user.admin? %>
       <td><%= link_to '<i class="glyphicon glyphicon-remove-sign"></i>'.html_safe, report, method: :delete, data: { confirm: "Are you sure you want to delete report '#{report.name}'?" } %> </td>
  <% end %>
 </tr>
