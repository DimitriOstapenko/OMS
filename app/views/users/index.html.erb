<% provide(:title, 'All users') %>
  
<table class="tbl table-hover">
   <thead>
      <tr>
          <th>User</th>
          <th>Email</th>
          <th>Role</th>
          <th>Active?</th>
          <th>Created</th>
          <th>Last Login</th>
          <th class='tbl_sm'></th>
      </tr>
  </thead>
  <tbody>

  <%= render @users %>

  </tbody>
</table>

<% if current_user.admin? %>
<div class="bottom_buttons ">
<%= will_paginate @users, class: "btn" %>
<%= button_to "Add User", new_user_registration_path, class: "btn btn-primary col-md-2 ", method: 'get'  %>
</div>
<% end %>
