<% return if user.su? %>
<tr>
  <td><%= user.name %></td>
  <td><%= user.email %></td>
  <td class='text-center'><%= user.role %></td>
  <td class='text-center'><%= user.confirmed? %></td>
  <td><%= user.client_name %></td>
  <td class='text-center'><%= user.created_at.to_date %></td>
  <td class='text-center'><%= user.sign_in_count %></td>
  <td class='text-center'><%= user.invited_by %></td>
     <% if current_user?(user) %>
       <td colspan=2></td>
     <% elsif current_user.admin? %>
       <td class="text-center"><%= link_to '<i class="glyphicon glyphicon-edit"></i>'.html_safe, edit_user_path(user),  method: :get, remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %> </td>
     <% end %>
 </tr>
