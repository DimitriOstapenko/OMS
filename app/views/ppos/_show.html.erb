<%
   provide(:title, "Show Production Order")
%>

<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        <b class="modal-title" id="myModalLabel">Production Purchase Order <%= @ppo.name %> created <%= @ppo.date %></b>
</div>
<div class="modal-body">
        <iframe id="myModal" src="/ppos/<%= @ppo.id %>" frameborder="0" width="100%" height="600px"></iframe>
</div>
<div class="modal-footer">
  <button class="btn btn-primary" class="close" data-dismiss="modal">Dismiss</button>
</div>

