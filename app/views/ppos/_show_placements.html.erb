<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <b class="modal-title" id="myModalLabel"><img src="/images/<%=@ppo.product.ref_code%>.jpg" width=70 style="vertical-align:bottom; margin-right:10px;"> Item  <%= @ppo.product.ref_code %>: <%= @ppo.name %> from <%= @ppo.date rescue '' %></b>
</div>

<div class="modal-body">
  <div class="well">

<table class="table table-hover table-striped " >
  <thead>
      <tr>
        <th class="tbl_sm text-center">Order #</th>
        <th class="tbl_lg text-center">Client</th>
        <th class="text-center">Date</th>
        <th class="text-center">Ordered</th>
        <th class="text-center">Pending</th>
        <th class="text-center tbl_xmd">Shipped</th>
        <th class="text-center">Status</th>
      </tr>
  </thead>
  <tbody>
   <%= render partial: 'inventories/placement', collection: @placements, as: :placement, remote: device_is_desktop? %>
  </tbody>

  <tfoot>
    <tr>
      <th colspan=3></th>
      <th class="text-center"><%= @ppo.quantity %></th>
      <th class="text-center"><%= @ppo.pending %></th>
      <th class="text-center"><%= @ppo.shipped %></th>
      <th></th>
    </tr>
  </tfoot>
</table>

<% unless @ppo.all_placements_shipped? || @ppo.all_placements_cancelled? %>
<div class="row">
  <div class="col-md-5">
    <%= button_to "Mark all as Shipped", set_to_shipped_ppo_path(@ppo), class: "btn btn-success"%>
  </div>
</div>
<% end %>

  </div>  
</div>

<div class="modal-footer">
    <small>* Once products are shipped, use "Marked as Shipped" button to change status of all listed orders</small>
</div>

