<%= render "shared/modal" %>

<h4> Verifying data integrity ... </h4>
<% ok_icon = '<font color=green><i class="glyphicon glyphicon-ok-sign"></i></font>'.html_safe %>
<% error_icon = '<font color=red><i class="glyphicon glyphicon-exclamation-sign"></i></font>'.html_safe %>

<ul>
<h5> Clients Table: </h5>
  <ul> <%= @empty_names.any? ? error_icon:ok_icon %>  Missing name test: <%= render 'show_clients', collection: @empty_names %> </ul>
