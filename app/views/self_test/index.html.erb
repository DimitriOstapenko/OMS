  <ul> <%= @empty_countries.any? ? error_icon:ok_icon %> Missing country field test: <%= render 'show_clients', collection: @empty_countries %> </ul>
  <ul> <%= @empty_emails.any? ? error_icon:ok_icon %> Missing email address test: <%= render 'show_clients', collection: @empty_emails %> </ul>
</ul>

<ul>
  <h5> Products table: </h5>
  <ul> <%= @empty_refcodes.any? ? error_icon:ok_icon %> Missing reference code test: <%= render 'show_products', collection:  @empty_refcodes %>  </ul>
