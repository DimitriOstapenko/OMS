  <ul> <%= @empty_scales.any? ? error_icon:ok_icon %> Missing scale test: <%= render 'show_products', collection: @empty_scales %> </ul>
  <ul> <%= @empty_colours.any? ? error_icon:ok_icon %> Missing color test: <%= render 'show_products', collection:  @empty_colours %> </ul>
  <ul> <%= @empty_brands.any? ? error_icon:ok_icon %> Missing brand test: <%= render 'show_products', collection: @empty_brands %> </ul>
  <ul> <%= @empty_weights.any? ? error_icon:ok_icon %> Missing weight test: <%= render 'show_products', collection: @empty_weights %> </ul>
  <ul> <%= @empty_categories.any? ? error_icon:ok_icon %> Missing category test: <%= render 'show_products', collection: @empty_categories %> </ul>
  <ul> <%= @empty_ctns.any? ? error_icon:ok_icon %> Missing carton count test: <%= render 'show_products', collection:  @empty_ctns %> </ul>
  <ul> <%= @empty_price_eu.any? ? error_icon:ok_icon %> Missing price EU test: <%= render 'show_products', collection: @empty_price_eu %> </ul>
  <ul> <%= @empty_price_eu2.any? ? error_icon:ok_icon %> Missing price EU2 test: <%= render 'show_products', collection: @empty_price_eu2 %> </ul>
