<b><%= collection.count == 0 ? 'None' : collection.count %></b> 
<% if collection.count > 0 %>
  <% if collection.count > 1 %>
    , including: 
  <% end %>
  <% collection[0..4].each do |pr| %>
    <%= link_to pr.ref_code, edit_product_path(pr) %>
  <% end %>
  <% if collection.count > 5 %>
  and <%= collection.count-5 %> more
  <% end %>
<% end %>
