<b><%= collection.count == 0 ? 'Ok' : collection.count %></b> 
<% if collection.count > 0 %>
  <% if collection.count > 1 %>
    , including: 
  <% end %>
  <% collection[0..15].each do |pr| %>
    <%= link_to pr.ref_code, edit_product_path(pr), remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %>
  <% end %>
  <% if collection.count > 15 %>
  and <%= collection.count-15 %> more
  <% end %>
<% end %>
