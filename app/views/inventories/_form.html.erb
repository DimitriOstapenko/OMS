<%= simple_form_for @inventory  do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <div class="row" %>
  <div class="col-md-12">
  <%= f.input :description, as: :text, input_html: {rows:8} %>
  </div>
  </div>

  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

<% end %>



