<% if @placements.any? %>
<h3>Back order for item "<%= @product.ref_code %>" </h3>
<table class="tbl2 table-hover table-striped table-bordered" >
  <thead>
      <tr>
          <th class="tbl_sm, text-center">Order #</th>
          <th class="tbl_md, text-center">Client</th>
          <th class="tbl_md, text-center">Date</th>
          <th class="tbl_md, text-center">Pcs</th>
          <th class="tbl_md, text-center">Status</th>
      </tr>
  </thead>
  <tbody>
   <%= render partial: 'inventories/placement', collection: @placements, as: :placement, remote: device_is_desktop? %>
  </tbody>

  <tfoot>
    <tr>
      <th colspan=3></th>
      <th class="text-center"><%= @product.back_ordered_pcs %></th>
      <th></th>
    </tr>
  </tfoot>
</table>

<div class="row">
  <div class="col-md-5">
    <%= button_to "Download PPO", download_ppo_product_ppo_path(@product), class: "btn btn-primary"%>
  </div>
  <div class="col-md-5">
    <%= button_to "Mark all as Shipped", set_back_order_to_shipped_product_path(@product), class: "btn btn-success"%>
  </div>
</div>
  
<div class="bottom_nav">
<%= will_paginate @placements, class: "btn" %>
</div>
<% end %>
