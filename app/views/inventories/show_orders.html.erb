<% if @orders.any? %>
<h3>Pending orders with item "<%= @product.ref_code %>" </h3>
<table class="tbl2 table-hover table-striped table-bordered" >
  <thead>
      <tr>
          <th class="tbl_sm, text-center">Order #</th>
          <th class="tbl_md, text-center">Client</th>
          <th class="tbl_md, text-center">Date</th>
          <th class="tbl_md, text-center">Pcs</th>
      </tr>
  </thead>
  <tbody>
   <%= render partial: 'inventories/order', collection: @orders, as: :order, remote: device_is_desktop? %>
  </tbody>

  <tfoot>
    <tr>
      <th colspan=3></th>
      <th class="text-center"><%= @product.total_pcs %></th>
    </tr>
  </tfoot>
</table>
  
<div class="bottom_nav">
<%= will_paginate @orders, class: "btn" %>
</div>
<% end %>
