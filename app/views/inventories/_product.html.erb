<%= render "shared/modal" %>
<tr>
      <td class="text-center"><%= link_to product.ref_code, product, remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %></td> 
      <td class="text-center"><%= product.scale_str %></td> 
      <td><%= product.description %></td>
      <td class="text-center"><%= product.category_str %></td> 
      <td class="text-center"><%= product.brand_str %></td> 
      <td class="text-center">
      <% if product.pending_order_placements.count > 0 %>
        <%= link_to "#{product.pending_order_placements.count}/#{product.total_pcs}", show_pending_orders_product_path(product),
            remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %>
      <% end %>
      </td>

      <td class="text-center">
      <% if product.back_ordered_pcs > 0 %>
        <%= link_to "#{product.active_ppo.name}: #{product.back_order_placements.count}/#{product.back_ordered_pcs}", show_back_orders_product_path(product),
            remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %>
      <% end %>
      </td>

      <td class="text-center">
      <% last_ppo = product.last_shipped_ppo %>
      <% if last_ppo %>
        <%= link_to "#{last_ppo.name}", product_ppo_path(product,last_ppo), remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window' %>
      <% end %>
      </td>

      <% if current_user.staff? || current_user.production? %>
        <td class="text-center"> 
          <% id = "product_#{product.id}" %>
          <%= simple_form_for product, url: update_quantity_path(product), method: :post, html: { class: "form" } do |f| %>
          <div class="form-group" style="padding-top: 10px;">
                 <%= f.input :quantity, as: :string, label: false, input_html: { onchange: 'this.form.submit();', id: id }  %>
          </div>
          <% end %>
        </td>
      <% elsif current_user.admin? %>
         <td class="text-center"><%= product.quantity %></td>
      <% end %>
   
</tr>

