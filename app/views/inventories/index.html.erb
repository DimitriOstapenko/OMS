<%= render "shared/modal" %>

<div id="status"> </div>

<% scroll = "table-wrapper-scroll-x" if mobile_device? %>
<table class="table table-hover table-striped <%= scroll %>" >
  <thead>
      <tr>
        <th class="text-center">Name</th>
        <th class="text-center">Description</th>
        <th class="text-center">Products</th>
        <th class="text-center">Ttl Pcs</th>
        <th class="text-center">Uploaded Date</th>
        <th class="text-center">Uploaded By</th>
        <th class="text-center">Status</th>
        <th colspan=3></th>
      </tr>
  </thead>
  <tbody>

  <%= render partial: 'inventory', collection: @inventories  %>

  </tbody>
</table>

<div class="bottom_nav">
<%= will_paginate @inventories, class: "btn" %>
</div>

<div class="row">
  <div class="col-md-3">
    <%= button_to "Download Inventory Template", inventory_template_path(format: :csv), class: "btn btn-success", method: :get  %>
  </div>
  <div class="col-md-3">
    <%= button_to "Upload And Process Inventory File", new_inventory_path, class: "btn btn-primary", method: :get %>
  </div>
</div>

<script>
$zoho.salesiq.ready=function(embedinfo)
{ $zoho.salesiq.floatbutton.visible("hide"); }
</script>

