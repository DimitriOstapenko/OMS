<% 
    if action_name == 'show_pending_orders'
      disabled = ORDER_STATUSES.values
    else
      disabled = [ACTIVE_ORDER,CANCELLED_ORDER] 
    end
%>
<%= simple_form_for [placement.order,placement], url: set_to_shipped_order_placement_path(placement.order,placement), method: 'patch' do |f|  %>
<tr>
  <td class="text-center"><%= placement.order.id %></td>
  <td class="text-center"><%= placement.order.client_name %></td>
  <td class="text-center"><%= placement.order.cre_date %></td>
  <td class="text-center"><%= placement.quantity %></td>
  <td class="text-center pt-3 tbl_lg">
   <% if placement.status == ACTIVE_ORDER %>
     <%= link_to('Set to Shipped', set_to_shipped_order_placement_path(placement.order,placement), remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window', method: 'patch') %>
     <%# f.input :status, collection: ORDER_STATUSES, label: false, include_blank: false, input_html: {onchange: 'this.form.submit();'}, disabled: disabled, remote: true, 'data-toggle':  "modal", 'data-target': '#modal-window'  %>
   <% else %>
     <%= placement.status_str %>
   <% end %>
  </td>
</tr>
<% end %>

