<%
   provide(:title, 'Order details')
%>

<div class="modal-header">
  <button type="button" class="close" data-dismiss="modal">&times;</button>
  <b class="modal-title" id="myModalLabel">Item  <%= @product.ref_code %>: Pending Orders (<%= @orders.count %>) </b>
</div>

<div class="modal-body">
  <div class="well">

<table class="tbl2 table-hover table-striped table-bordered" >
  <thead>
      <tr>
          <th class="tbl_sm, text-center">Order #</th>
          <th class="tbl_md, text-center">Client</th>
          <th class="tbl_md, text-center">Date</th>
          <th class="tbl_md, text-center">Pcs</th>
      </tr>
  </thead>
  <tbody>
   <%= render partial: 'inventories/order', collection: @orders, as: :order, remote: device_is_desktop? %>
  </tbody>

  <tfoot>
    <tr>
      <th colspan=3></th>
      <th class="text-center"><%= @product.total_pcs %></th>
    </tr>
  </tfoot>
</table>

<div class="row">
  <div class="col-md-4">
<%= button_to "Generate PPO", '#', class: "btn btn-success", :method => "get" %>
  </div>
</div>

  </div>  
</div>

<div class="modal-footer">
  <small> * Production Purchase Order will include all orders on this page </small>
</div>

