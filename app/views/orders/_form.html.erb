<div class="col-md-6 col-md-offset-3">
<h3 class='display-1'><%= yield :title %></h3>
<div class="well">

<%= simple_form_for @order do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.input :products, collection: Product.all, label_method: "ref_code_and_descr", value_method: :id, include_blank: 'Please select product' %> <%#, input_html: { multiple: true, size: 20 }  %>
  <%= f.input :quantity %> 

  <% unless action_name == 'show' %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <% end %>

<% end %>

</div>
</div>
