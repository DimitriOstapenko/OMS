<%= simple_form_for :placement, url: add_product_path, method: :post do |f| %>
  <%# render 'shared/error_messages', object: f.object %>

  <%= f.input :id, collection: Product.all, label: 'Product', label_method: "ref_code_and_descr", value_method: :id, include_blank: 'Please Select' %> 
  <%= f.input :quantity, as: :integer %> 

  <% unless action_name == 'show' %>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>
  <% end %>

<% end %>

