<table  class="table table-sm table-responsive table-condensed table-bordered">
  <thead class="bg-success">
  <tr>
    <th class="table-condensed"> Grand Total </th>
    <th class="table-condensed"> Pending Orders </th>
    <th class="table-condensed"> Active Orders </th>
    <th class="table-condensed"> Shipped Orders </th>
    <th class="table-condensed"> Cancelled Orders </th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td> <%= to_currency @orders_.sum{|o| o.grand_total*o.client.fx_rate} %></td>
    <td> <%= to_currency @orders_.where(status: PENDING_ORDER).sum{|o| o.grand_total*o.client.fx_rate} %> </td>
    <td> <%= to_currency @orders_.where(status: ACTIVE_ORDER).sum{|o| o.grand_total*o.client.fx_rate} %> </td>
    <td> <%= to_currency @orders_.where(status: SHIPPED_ORDER).sum{|o| o.grand_total*o.client.fx_rate} %></td>
    <td> <%= to_currency @orders_.where(status: CANCELLED_ORDER).sum{|o| o.cancelled_total*o.client.fx_rate} %></td>
  </tbody>
</table>
