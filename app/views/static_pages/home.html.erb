<%# if !logged_in? %>
  <% 
     random = Dir.glob("#{IMAGE_BASE}/fullsize/[TLG]*.jpg")[rand(650)] 
     img = Pathname(random).basename rescue 'reduced.jpg'
  %>  

<style>
body {
  background-image: url( "/images/fullsize/<%= img %>" );
  background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: cover;
}
</style>
<%# end %>
